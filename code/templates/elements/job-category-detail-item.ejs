<div class="single-job mb-4 d-lg-flex justify-content-between">
    <div class="job-text">
        <h4><%- place %></h4>
        <ul class="mt-4">
            <li class="mb-3"><h5><i class="fa fa-map-marker"></i><%- place %></h5></li>
            <li class="mb-3"><h5><i class="fa fa-pie-chart"></i><%- category %></h5></li>
            <li><h5><i class="fa fa-clock-o"></i>Deadline <%- deadline %></h5></li>
        </ul>
    </div>
    <div class="job-img align-self-center">
        <img src="<%- image %>" alt="job">
    </div>
    <div class="job-btn align-self-center">
        <a href="#" class="third-btn job-btn1">more details</a>
        <a href="#" class="third-btn">apply</a>
    </div>
