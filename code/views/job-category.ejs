<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Page Title -->
    <title>Job Category</title>

</head>
<body>
<!-- Page Title Starts -->
<section class="page-title page-title-blog text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2><%- title %></h2>
                <p>Số lượng công việc hiện có: <%- numberOfJobs %></p>
            </div>
        </div>
    </div>
</section>
<!-- Page Title End -->

<!-- Job Single Content Starts -->
<section class="job-single-content section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="jobs-title">
                    <h2>Công việc tìm được</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="jobs-tab tab-item">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="recent-tab" data-toggle="tab" href="#recent" role="tab"
                               aria-controls="home" aria-selected="true">recent</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="fulltime-tab" data-toggle="tab" href="#full-time" role="tab"
                               aria-controls="profile" aria-selected="false">full time</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="parttime-tab" data-toggle="tab" href="#part-time" role="tab"
                               aria-controls="part-time" aria-selected="false">part time</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="intern-tab" data-toggle="tab" href="#intern" role="tab"
                               aria-controls="intern" aria-selected="false">intern</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <%- jobFilterTable %>
        <div class="row d-flex justify-content-center">
            <form action="#myTabContent" method="post">
                <div class="more-job-btn mt-5">
                    <input class="btn template-btn" id="btn-more" type="submit" name="more" value="more job post">
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Job Single Content End -->


<!-- Category Area Starts -->
<section class="category-area section-padding3">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-top text-center">
                    <h2>Các danh mục công việc khác</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <% lcJobCategory.forEach(function(cate){ %>
            <%- include('elements/job-category-thumb-item',{cate:cate}) %>
            <% }); %>
        </div>
    </div>
</section>
<!-- Category Area End -->
</body>
</html>
