<div class="single-content1">
    <div class="single-job mb-4 d-lg-flex justify-content-between">
        <div class="job-text">
            <h4><%- job.name %></h4>
            <ul class="mt-4">
                <li class="mb-3"><h5><i class="fas fa-suitcase"></i>Ngành: <%- job.jobcategory %></h5></li>
                <li class="mb-3"><h5><i class="fas fa-money-bill-wave"></i>Lương: <%- job.offer %> VND/tháng</h5>
                </li>
                <% if (job.status === 'available') { %>
                <li class="mb-3"><h5><i class="fas fa-street-view"></i>Tình trạng: <b style="color: lightgreen"><%-
                    job.status %></b>
                </h5></li>
                <%} else {%>
                <li class="mb-3"><h5><i class="fas fa-street-view"></i>Tình trạng: <b style="color: red"><%- job.status
                    %></b>
                </h5></li>
                <%}%>
                <li><h5><i class="fas fa-clock"></i>Deadline: <%- job.deadline.toDateString() %></h5></li>
            </ul>
        </div>
        <div class="job-btn align-self-center">
            <a href="/job/<%- job.JID %>" class="third-btn job-btn1">Xem chi tiết</a>
            <% if (job.status !== 'available') { %>
            <a href="#" class="template-btn disabled">Apply now</a>
            <%} else {%>
            <a href="/dashboard/send-email/<%- job.JID %>" class="template-btn">Apply now</a>
            <%}%>
        </div>
    </div>
</div>