<header class="header-area main-header">
    <div class="container">
        <form id="frmLogout" action="/logout" method="post"></form>
        <div class="row">
            <div class="col-lg-2">
                <div class="logo-area">
                    <a href="/"><img id="logo" src="/images/logo/logo.png" alt="logo"></a>
                </div>
            </div>
            <div class="col-lg-10">
                <div class="custom-navbar">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
                <div class="main-menu">
                    <ul>
                        <li class="active"><a href="/">home</a></li>
                        <% if (typeof(authUser) !== 'undefined') {%>
                        <% if (!authUser.role) {%>
                        <% } else if (authUser.role === "employee") {%>
                        <li><a href="/my-cv">My CVs</a></li>
                        <% } else if (authUser.role === "admin") { %>
                        <li><a href="/my-cv">Admin section</a></li>
                        <% } else if (authUser.role === "employer") { %>
                        <li><a href="/my-company">Manager</a>
                            <ul class="sub-menu">
                                <li><a href="/my-company">My company <i class="fas fa-search"></i></a>
                                <li><a href="/job-manager">Job Manager <i class="fas fa-arrow-circle-down"></i></a></li>
                            </ul></li>
                        <% } %>
                        <% } %>
                        <li><a href="/job-category">jobs</a>
                            <ul class="sub-menu">
                                <li><a href="/job-search">job search <i class="fas fa-search"></i></a>
                                <li><a href="/job-category">job category <i class="fas fa-arrow-circle-down"></i></a>
                                    <ul class="sub-menu2">
                                        <% lcJobCategory.forEach(function(cate){ %>
                                        <li><a href="/job-category/<%= cate.name %>"> <%= cate.name %></a></li>
                                        <% }); %>
                                        <li><a href="/job-category">more ...</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li><a href="/contact">contact</a></li>
                        <li><a href="/about">about us</a></li>
                        <li class="menu-btn">
                            <ul>
                                <% if (!isAuthenticated) {%>
                                <li><a href="/login" class="login">log in</a></li>
                                <li><a href="/register" class="template-btn">Register</a></li>
                                <% } else { %>
                                <li><a href="/my-account" class="login">Hi, <b><%= authUser.name %> <i class="fas fa-user"></i></b></a>
                                    <ul class="sub-menu2">
                                        <li><a href="/my-account">My profile</i></a></li>
                                        <% if (authUser.role === "employee") {%>
                                        <li><a href="/my-cv">My CVs</a></li>
                                        <% } else if (authUser.role === "admin") { %>
                                        <li><a href="/my-cv">Admin section</a></li>
                                        <% } else if (authUser.role === "employer") { %>
                                        <li><a href="/my-cv">Employer section</a></li>
                                        <% } %>
                                    </ul>
                                </li>
                                <li><a href="javascript: $('#frmLogout').submit();" class="third-btn">Log out</a></li>
                                <% } %>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>