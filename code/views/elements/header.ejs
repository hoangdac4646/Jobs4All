<header class="header-area main-header">
    <div class="container">
        <form id="frmLogout" action="/logout" method="post"></form>
        <div class="row">
            <div class="col-lg-2">
                <div class="logo-area">
                    <a href="/"><img id="logo" src="/images/logo/logo.png" alt="logo"></a>
                </div>
            </div>
            <div class="col-lg-10">
                <div class="custom-navbar">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
                <div class="main-menu">
                    <ul>
                        <li class="active"><a href="/">home</a></li>
                        <li><a href="/my-cv">My CV</a></li>
                        <li><a href="/job-category">job category</a>
                            <ul class="sub-menu">
                                <% lcJobCategory.forEach(function(cate){ %>
                                <li><a href="/job-category/<%= cate.name %>"> <%= cate.name %></a></li>
                                <% }); %>
                            </ul>
                        </li>
                        <li><a href="/contact">contact</a></li>
                        <li><a href="/about">about us</a></li>
                        <li class="menu-btn">
                            <% if (typeof(isAuthenticated) == "undefined") {%>
                            <a href="/login" class="login">log in></a>
                            <a href="/register" class="template-btn">Register</a>
                            <% } else { %>
                            <a href="/my-account" class="login">Hi, <b><%= authUser.username %>  <span><i class="fas fa-user"></i></span> </b></a>
                            <a href="javascript: $('#frmLogout').submit();" class="third-btn">Log out</a>
                            <% } %>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>