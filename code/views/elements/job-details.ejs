<div class="single-content1">
    <div class="single-job mb-4 d-lg-flex justify-content-between">
        <div class="job-text">
            <h4><%- job.name %></h4>
            <ul class="mt-4">
                <li class="mb-3"><h5><i class="fas fa-suitcase"></i>Ngành: <%- job.jobcategory %></h5></li>
                <li class="mb-3"><h5><i class="fas fa-money-bill-wave"></i>Lương: <%- job.offer %> VND/tháng</h5>
                </li>
                <% if (job.status === 'available') { %>
                <li class="mb-3"><h5><i class="fas fa-street-view"></i>Tình trạng: <b style="color: lightgreen"><%- job.status %></b>
                </h5></li>
                <%} else {%>
                <li class="mb-3"><h5><i class="fas fa-street-view"></i><span>Tình trạng: <%- job.status %></span>
                </h5></li>
                <%}%>
                <li><h5><i class="fas fa-clock"></i>Deadline: <%- job.deadline.toDateString() %></h5></li>
            </ul>
        </div>
        <div class="job-btn align-self-center">
            <a href="#" class="template-btn">Apply now</a>
        </div>
    </div>
</div>
<div class="single-content2 py-4">
    <h4>Mô tả:</h4>
    <p> <%- job.description %></p>
</div>
<div class="single-content3 py-4">
    <h4>Nơi làm việc:</h4>
    <p> <%- job.location %></p>
</div>
<div class="single-content4 py-4">
    <h4>Số lượng tuyển:</h4>
    <span class="ml-4"><%- job.amount %></span>
    <h4 class="mt-4">Loại:</h4>
    <span class="ml-4"><%- job.type %></span>
    <h4 class="mt-4">Cấp bậc:</h4>
    <span class="ml-4"><%- job.level %></span>
</div>
<div class="single-content5 py-4">
    <h4>Yêu cầu chi tiết:</h4>
    <%- job.requirement %>
</div>