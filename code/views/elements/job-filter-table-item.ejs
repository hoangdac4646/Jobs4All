<div class="single-job mb-4 d-lg-flex justify-content-between">
    <div class="job-text">
        <h4><%- job.name %></h4>
        <ul class="mt-4">
            <li class="mb-3"><a href="/company/<%- job.CID %>"><h5><i class="fas fa-map-marker"></i><%- job.company %></h5></a></li>
            <li class="mb-3"><h5><i class="fas fa-sticky-note"></i></i>Mô tả: <%- job.description %></h5></li>
            <li class="mb-3"><h5><i class="fas fa-money-bill-wave"></i></i>Lương: <%- job.offer %> VND/tháng</h5></li>
            <li><h5><i class="fas fa-clock"></i>Deadline: <%- job.deadline.toDateString() %></h5></li>
        </ul>
    </div>
    <div class="job-img align-self-center">
        <img src="/images/job1.png" alt="job">
    </div>
    <div class="job-btn align-self-center">
        <% if (job_type == 'all') { %>
        <a href="/job/<%- job.JID %>" class="third-btn job-btn1">Xem chi tiết</a>
        <% } else if (job_type == 'full time') { %>
        <a href="/job/<%- job.JID %>" class="third-btn job-btn2">Xem chi tiết</a>
        <% } else if (job_type == 'part time') { %>
        <a href="/job/<%- job.JID %>" class="third-btn job-btn3">Xem chi tiết</a>
        <% } else if (job_type == 'intern') { %>
        <a href="/job/<%- job.JID %>" class="third-btn job-btn4">Xem chi tiết</a>
        <% } %>
        <a href="#" class="third-btn">apply</a>
    </div>
</div>
