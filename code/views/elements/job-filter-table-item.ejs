<div class="single-job mb-4 d-lg-flex justify-content-between">
    <div class="job-text">
        <h4><%- job.name %></h4>
        <ul class="mt-4">
            <li class="mb-3"><h5><i class="fa fa-map-marker"></i><%- job.company %></h5></li>
            <li class="mb-3"><h5><i class="fa fa-pie-chart"></i><%- job.jobcategory %></h5></li>
            <li><h5><i class="fa fa-clock-o"></i>Deadline <%- job.deadline %></h5></li>
        </ul>
    </div>
    <div class="job-img align-self-center">
        <img src="/images/job1.png" alt="job">
    </div>
    <div class="job-btn align-self-center">
        <a href="#" class="third-btn job-btn1">more details</a>
        <a href="#" class="third-btn">apply</a>
    </div>
</div>
